<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.anu.cook.SecondPage"
    android:background="#B40314">


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cuisines"
        android:id="@+id/cuisinesButton"
        android:background="@drawable/but"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="cuisinesClick"
        android:textColor="#ffffff"
        android:textSize="30dp"

        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/recipes"
        android:id="@+id/recipesButton"
        android:background="@drawable/but"
        android:layout_marginTop="69dp"
        android:layout_below="@+id/cuisinesButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="recipyClick"
        android:textColor="#ffffff"
        android:textSize="30dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/courses"
        android:id="@+id/coursesButton"
        android:layout_above="@+id/cuisinesButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="69dp"
        android:background="@drawable/but"
        android:onClick="courseClick"
        android:textColor="#ffffff"
        android:textSize="30dp"/>
</RelativeLayout>
